% before preface: title, copyright, and signature pages

\def\beforepreface{
	\pagenumbering{roman}
	\pagestyle{plain}

	% title page
	\titlep

	% online version has no copyright or signature pages but page counter
	% must be incremented signature page should come at end
	\ifonline
		\setcounter{page}{4}

	\else
		% copyright page
		\ifcopyright
			\ifthesiscopyright
				\thesiscopyrightpage
			\else
				\tradcopyrightpage
			\fi
		\fi

		% signature page
		\signaturepage
	\fi

	\cleardoublepage
}


